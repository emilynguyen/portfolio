      <h2 class="text-right date">/{{year}}</h2>
    </div>
    <div class="grid__item desk--one-half mb-2">
      <h4>{{{description}}}</h4>
      {{#if details}}
      <div class="grid mt-1 details">
        {{#each details}}
        <div class="grid__item">
          <h3 class="asterisks">{{title}}</h3>
          <h4>
            {{{content}}}
          </h4>
        </div>
        {{/each}}
        {{#if button}}
        <div class="grid__item">
          <a class="btn" href="{{button.link}}" target="_blank">{{button.title}}</a>
        </div>{{/if}}
      </div>
      {{/if}}
    </div>

  </div>
