{{#with currProject}}

<main id="project-page" class="styled-lists">
  <div class="grid styled-links">
    <div class="grid__item desk--one-half mb-2">
      <h1>{{title}}</h1>
      <h2 class="text-right date">/{{year}}</h2>
    </div>
    <div class="grid__item desk--one-half mb-2">
      <h4>{{{description}}}</h4>
      {{#ifCond details "||" button}}
      <div class="grid mt-1 details">
        {{#if details}}
        {{#each details}}
        <div class="grid__item">
          <h3 class="asterisks">{{title}}</h3>
          <h4>
            {{{content}}}
          </h4>
        </div>
        {{/each}}
        {{/if}}
        {{#if button}}
        <div class="grid__item">
          <a class="btn" href="{{button.link}}" target="_blank">{{button.title}}</a>
        </div>{{/if}}
      </div>
      {{/ifCond}}
    </div>

  </div>

  <!-- <hr> -->

  {{#each blocks}}
  {{#unless hide}}
  <div class="grid grid--narrow {{#unless @first}}pt-2{{/unless}} block">
    <!-- TEXT -->
    {{#if text}}
    <div class=" grid__item {{@root.col1}}">
      {{#if title}}<h3 class="sub portable--mb-2 title">{{title}}</h3>{{/if}}
    </div>
    <div class="grid__item {{@root.col2}}">
      {{{content}}}
    </div>
    {{/if}}

    <!-- IMAGE -->
    {{#if image}}
    {{#ifCond captionBefore "||" title}}
    <div class="grid__item {{@root.col1}}">
      {{#if title}}
      <h3 class="sub mb-2 portable--mb-1 title {{#if captionBefore}}portable--mb-2{{/if}}">{{title}}</h3>{{/if}}
    </div>
    <div class="grid__item {{@root.col2}}">{{{captionBefore}}}</div>
    {{/ifCond}}
    <div class="grid__item">
      {{#if link}}<a href="{{link}}" target="_blank">{{/if}}
        <img class="{{#if captionBefore}}mt-2 portable--mt-2{{/if}} {{#if captionAfter}}desk--mb-2{{/if}}"
          src="/images/{{content}}" alt="{{alt}}">{{#if link}}</a>{{/if}}
    </div>
    {{#if captionAfter}}
    <div class="grid__item {{@root.col1}}"></div>
    <div class="grid__item {{@root.col2}}">{{{captionAfter}}}</div>
    {{/if}}
    {{/if}}

    <!-- GALLERY -->
    {{#if gallery}}
    {{#ifCond captionBefore "||" title}}
    <div class="grid__item {{@root.col1}}">
      {{#if title}}
      <h3 class="title sub mb-2 portable--mb-1 {{#if captionBefore}}portable--mb-2{{/if}}">{{title}}</h3>{{/if}}
    </div>
    <div class="grid__item mb-2 portable--mb-2 {{@root.col2}}">{{{captionBefore}}}</div>
    {{/ifCond}}
    {{#if square}}
    <!-- square gallery -->
    {{#each content}}
    <div class="grid__item mb-1 lap-up--mb-1 lap-up--one-half ">
      <img src="/images/{{image}}" alt="{{alt}}">
    </div>
    {{/each}}
    <!-- end square gallery -->
    <!-- block gallery -->
    {{else if block}}
    {{#each content}}
    {{#if full}}
    <div class="grid__item {{#unless @last}}mb-1 lap-up--mb-1 {{/unless}}">
      {{#if link}}<a href="{{link}}" target="_blank">{{/if}}
        <img src="/images/{{image}}" alt="{{alt}}">{{#if link}}</a>{{/if}}
    </div>
    {{/if}}
    {{#if half}}
    <div class="grid__item mb-1 lap-up--mb-1 lap-up--one-half ">
      <img src="/images/{{image}}" alt="{{alt}}">
    </div>
    {{/if}}

    {{/each}}

    <!-- end block gallery -->
    <!-- masonry gallery -->
    {{else}}
    <!-- 2 cols -->
    <div class="grid__item one-half palm--hide">
      {{#each content}}
      {{#if col1}}
      <img src="/images/{{image}}" alt="{{alt}}" class="lap--mb-2 desk--mb-2 ">
      {{/if}}
      {{/each}}
    </div>
    <div class="grid__item one-half palm--hide">
      {{#each content}}
      {{#if col2}}
      <img src="/images/{{image}}" alt="{{alt}}" class="lap--mb-2 desk--mb-2 ">
      {{/if}}
      {{/each}}
    </div>
    <!-- 1 col (palm) -->
    {{#each content}}
    <div class="grid__item lap-up--hide">
      <img src="/images/{{image}}" alt="{{alt}}" class="mt-1 ">
    </div>
    {{/each}}
    {{/if}}
    <!-- /#if square -->
    {{/if}}
    <!-- /#if gallery -->

    {{#if pdf}}
    {{#ifCond captionBefore "||" title}}
    <div class="grid__item {{@root.col1}}">
      {{#if title}}
      <h3 class="title sub mb-2 portable--mb-1 {{#if captionBefore}}portable--mb-2{{/if}}">{{title}}</h3>{{/if}}
    </div>
    <div class="grid__item {{@root.col2}}">{{{captionBefore}}}</div>
    {{/ifCond}}
    <div class="grid__item">

      <iframe class="{{#if captionBefore}}mt-3 portable--mt-2{{/if}} {{#if captionAfter}}desk--mb-2{{/if}}"
        src="{{content}}"></iframe>


    </div>
    {{#if captionAfter}}
    <div class="grid__item {{@root.col1}}"></div>
    <div class="grid__item {{@root.col2}}">{{{captionAfter}}}</div>
    {{/if}}
    {{/if}}
    <!-- /#if pdf -->
  </div>
  {{/unless}}
  {{/each}}
  {{/with}}
  <hr class="mt-2">
  <div class="grid mt-2 mb-3">
    <div class="grid__item lap-up--one-half palm--mb-2">
      <a href="{{#unless prevProject.external}}/{{/unless}}{{prevProject.url}}" class="next-project-link"
        {{#if external}}target="_blank" {{/if}}>
        <div class="grid">

          <div class="grid__item one-fifth">
            <h3>←</h3>
          </div>
          <div class="grid__item four-fifths text-right">
            <h3>{{prevProject.title}}</h3>
          </div>
        </div>
      </a>
    </div>
    <div class="grid__item lap-up--one-half">
      <a href="{{#unless nextProject.external}}/{{/unless}}{{nextProject.url}}" class="next-project-link"
        {{#if external}}target="_blank" {{/if}}>
        <div class="grid">
          <div class="grid__item four-fifths">
            <h3>{{nextProject.title}}</h3>
          </div>
          <div class="grid__item one-fifth text-right">
            <h3>→</h3>
          </div>
        </div>
      </a>
    </div>
  </div>
</main>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"
  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>