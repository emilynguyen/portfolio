{{#with currProject}}
<div class="project-page" data-bg="{{bg}}">
  <div class="top">
    <div class="grid ">
      <div class="grid__item">
        <h1>{{title}}</h1>
      </div>
    </div>
  </div>

  <div class="grid landing">
    <div class="grid__item desk--one-third description">
      {{#if summary}}{{{summary}}}{{else}}{{description}}{{/if}}
      {{#if button}}
      <a href="{{button.link}}" target="_blank" class="btn mt" style="--btn-bg: {{text}}; --btn-text: {{bg}}">{{button.title}}</a>
      {{/if}}
    </div>
    <div class="grid__item desk--two-thirds">
      <img src="/images/{{#if landing}}{{landing}}{{else}}{{icon}}{{/if}}" alt="{{title}}">
    </div>
  </div>
</div>

{{/with}}