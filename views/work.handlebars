<div id="my-work-block" class="grid mb-2 mt-4 portable--mt-3">
  <!--
  <div class=" grid__item ">
    <h2 class=" mb-3 portable--mb-2">Work </h2>
  </div> -->
  {{#each gallery}}
  {{#unless hide}}
  <div class="grid__item desk--{{size}} lap--one-half mb-4">
    <div class="mb-2">
      <a class="img-link" href="/{{url}}">
        <img src="/images/{{icon}}" alt="{{title}}"></a>
    </div>
    <div class="title-container">
      <h1 class="filename mb-2"><a href="/ergo">{{display}}</a></h1>
    </div>
    <div class="grid">
      <div class="grid__item one-half lap--one-whole">
        <p>{{{description}}}</p>
      </div>
      <div class="grid__item one-half lap--one-whole">
        <p class="palm--hide desk--hide">â€”</p>
        <p>{{sub}}</p>
      </div>
      <!--<p>{{details.date}}</p>-->
    </div>
  </div>
  {{/unless}}
  {{/each}}
</div>

<div class="mb-4">
  <h1>I've also built <a href="http://asgraphicstudio.ucsd.edu/" target="_blank">A.S. Graphic Studio</a>, <a
      href="https://frontiers.designatucsd.org/" target="_blank">Design Frontiers</a>, <a
      href="http://camp.designatucsd.org" target="_blank">Design Camp</a>, and <a
      href="http://asgraphicstudio.ucsd.edu/makeart/" target="_blank">Make Art</a>.</h1>
</div>

<script>
  var arr = document.getElementsByClassName('filename');
  for (var i = 0; i < arr.length; i++) {
    arr[i].innerHTML = arr[i].innerHTML.replace(/_/g, '_<wbr/>');
    arr[i].innerHTML = arr[i].innerHTML.replace(/\./g, '.<wbr/>');
  }
</script>