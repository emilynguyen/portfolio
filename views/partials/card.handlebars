<div class="card mb-md">
  <a href="/{{url}}">
    <div style="background-color: {{bg}}" class="card-img-container">
      <img class="card-img {{#if darkenIcon}}darken{{/if}}" src="images/{{icon}}" alt="">
    </div>
    <h3 class="card-title ">{{title}}</h3>
  </a>
  <div class="card-sub mb-xs">{{sub}}</div>
  <p class="card-description">{{description}}</p>
</div>