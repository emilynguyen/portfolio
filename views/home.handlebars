<script>
    function nextNav(direction) {
        var $active = $('.active');
        var $next;
        $active.removeClass('active');

        switch (direction) {
            case "down":
                $next = $active.next();
                break;
            case "up":
                $next = $active.prev();
                break;
        }

        if ($next.length) {
            $next.addClass('active');
        } else {

            switch (direction) {
                case "down":
                    $('nav li:first').addClass('active');
                    break;
                case "up":
                    $('nav li:last').addClass('active');
                    break;
            }
        }
    }

    $(document).keydown(function (e) {
        switch (e.keyCode) {

            case 38: // Up arrow    
                nextNav("up");
                break;
            case 39: // Right arrow
                //$('.active a')[0].click();
                break;
            case 40: // Down arrow
                nextNav("down");
                break;
            case 13: // Enter
                $('.active a')[0].click();
                break;
        }
    });

    $('nav li').hover(function () {
        $('.active').removeClass('active');
        $(this).addClass('active');
    });
</script>